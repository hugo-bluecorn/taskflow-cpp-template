{
    "version": 8,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Debug",
            "description": "Default debug build with Clang",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build with Clang",
            "binaryDir": "${sourceDir}/build-release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "tdd-tsan",
            "displayName": "TDD with Thread Sanitizer",
            "description": "Debug build with thread and UB sanitizers for TDD workflow",
            "binaryDir": "${sourceDir}/build-tdd-tsan",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_COVERAGE": "OFF",
                "CMAKE_CXX_FLAGS": "-fsanitize=thread,undefined -g -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=thread,undefined"
            }
        },
        {
            "name": "tdd-asan",
            "displayName": "TDD with Address Sanitizer",
            "description": "Debug build with address and UB sanitizers for memory checking",
            "binaryDir": "${sourceDir}/build-tdd-asan",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_COVERAGE": "ON",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "tdd-tsan",
            "configurePreset": "tdd-tsan"
        },
        {
            "name": "tdd-asan",
            "configurePreset": "tdd-asan"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "tdd-tsan",
            "configurePreset": "tdd-tsan",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            }
        },
        {
            "name": "tdd-asan",
            "configurePreset": "tdd-asan",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            }
        }
    ]
}
